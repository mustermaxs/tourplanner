@page "/tours"
@attribute [StreamRendering]
@inject ToursViewModel ToursVM
@inject NavigationManager NavManager

<PageTitle>Tours</PageTitle>

<div class="d-flex justify-content-between align-items-center">
    <h1>Tours</h1>

    <button class="btn btn-primary" @onclick="AddTour">
        + Add Tour
    </button>
</div>
@if (ToursVM.Tours == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Transport Type</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Popularity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tour in ToursVM.Tours)
                {
                    <tr>
                        <td>
                            <a class="link" style="cursor:pointer" @onclick="() => EditTour(tour.Id)">@tour.Name</a>
                        </td>
                        <td>@tour.Description</td>
                        <td>@tour.TransportType</td>
                        <td>@tour.From</td>
                        <td>@tour.To</td>
                        <td>@tour.Popularity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await ToursVM.InitializeAsync();
    }

    private void AddTour()
    {
        NavManager.NavigateTo("/new");
    }

    private void EditTour(int tourId)
    {
        NavManager.NavigateTo($"/tour/{tourId}");
    }
}
